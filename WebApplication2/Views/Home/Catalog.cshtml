@model IEnumerable<WebApplication2.Models.Service>

@{
    ViewData["Title"] = "Каталог";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-left mt-3">Каталог</h1>

<div class="row">
    @foreach (var service in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card" style="width: 18rem; height: 30rem;">
                <img src="~/images/@Html.DisplayFor(modelItem => service.ImagePath)" class="card-img-top" style="width: 100%; height: 15rem; object-fit:contain;">
                <div class="card-body">
                    <h3 class="card-title font-weight-bold">@Html.DisplayFor(modelItem => service.Title)</h3>
                    <a class="nav-link text-muted" asp-controller="Services" asp-action="Details" asp-route-id="@service.Id" style="text-decoration: underline;">Детали</a>
                    <div class="d-flex justify-content-between align-items-baseline col-md-10">
                        <p class="card-text text-muted">Цена: @service.Price руб.</p>
                        <form asp-controller="Home" asp-action="Catalog" method="post">
                            <input type="hidden" name="serviceId" value="@service.Id" />
                            <input type="submit" value="Купить" class="btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div>
    <h5 class="col-mt-10">За последние @ViewData["TrackingTimeInMinutes"] минут эту страницу посетили @ViewData["VisitCount"] раз!</h5>
    <h5>Лично Вы за последние @ViewData["TrackingTimeInMinutes"] минут посетили страницу @ViewData["cookieVisitCount"] раз. Последний раз был в @ViewData["LastVisit"]</h5>
</div>